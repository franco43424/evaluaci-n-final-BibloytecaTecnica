<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.miempresa.bivlotectatecnica">

    <!-- PERMISOS CLAVE PARA CMARA Y ARCHIVOS -->
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" android:maxSdkVersion="32" />
    <!--  PERMISO AADIDO/AJUSTADO: Necesario para guardar archivos en Descargas/Documentos -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" android:maxSdkVersion="32" />
    <uses-permission android:name="android.permission.READ_MEDIA_IMAGES" />

    <uses-feature android:name="android.hardware.camera" android:required="false" />


    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Proyectodesqlite"
        tools:targetApi="31">

        <!-- ELIMINADO: Se removi贸 la declaraci贸n de la clase ReportPDFGenerator ya que no es una actividad -->

        <!-- 1. LoginActivity: El punto de entrada principal (LAUNCHER) -->
        <activity
            android:name=".LoginActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:noHistory="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- 2. ReportListActivity: Lista principal de informes -->
        <activity
            android:name=".ReportListActivity"
            android:label="Informes de Mantenimiento"
            android:parentActivityName=".AdminMenuActivity" />

        <!-- 3. AdminMenuActivity: Men煤 de gesti贸n -->
        <activity
            android:name=".AdminMenuActivity"
            android:label="Panel Admin"
            android:parentActivityName=".LoginActivity" />

        <!-- 4. StepRegisterActivity: Registro de la secuencia de pasos (Usa C谩mara) -->
        <activity
            android:name=".StepRegisterActivity"
            android:label="Nuevo Procedimiento"
            android:parentActivityName=".ReportListActivity" />

        <!-- 5. TechnicianListActivity: Gesti贸n de t茅cnicos -->
        <activity
            android:name=".TechnicianListActivity"
            android:label="Gesti贸n de T茅cnicos"
            android:parentActivityName=".AdminMenuActivity" />

        <!-- CONFIGURACIN CRTICA: FileProvider para URIs seguras de la c谩mara -->
        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="com.miempresa.bivlotectatecnica.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/fileprovider_paths" />
        </provider>

    </application>
</manifest>